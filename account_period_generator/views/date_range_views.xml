<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_date_range_tree_period" model="ir.ui.view">
		<field name="name">date.range.tree</field>
		<field name="model">date.range</field>
		<field name="inherit_id" ref="date_range.view_date_range_tree" />
		<field name="arch" type="xml">
			<field name="active" position="after">
				<field name="fiscal_year" invisible="1"/>
				<button string="Create Monthly Periods" name="create_period" type="object" attrs="{'invisible': [('fiscal_year','=',False)]}"/>
			</field>
		</field>
	</record>

</odoo>
