<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	<template  id= "etat_igr" >
    <!--<t t-call= "hr_payroll_ma_legal_reports.external_layout_hr_reports" >-->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
			<div class="page">
				<p><b>Etat IR</b></p>
                <table width="100%" style="border-collapse: collapse;">
                    <tr>
                       <td width="30%"><b>Période</b></td>
                       <td width="70%"><span t-field="o.period_id.name"/></td>
                    </tr>
                </table>
				<br/><br/><br/>
				<t t-set="total_cotis_employee" t-value="0"/>
				<table width="100%" style="border-collapse: collapse;">
					<thead>
				        <tr>
				        	<th style="border: 1px solid black;text-align: center;" width="5%">Matricule</th>
				            <th style="border: 1px solid black;text-align: center;" width="55%">Nom complet</th>
				            <th style="border: 1px solid black;text-align: center;" width="10%">Nbr jours travaillés</th>
				            <th style="border: 1px solid black;text-align: center;" width="15%">Net imposable</th>
                            <th style="border: 1px solid black;text-align: center;" width="15%">Retenue I-R</th>
                        </tr>
					</thead>
					<t t-set="total1" t-value="0"/>
					<t t-set="total2" t-value="0"/>
					<t t-set="total3" t-value="0"/>
					<div t-foreach="o.bulletin_line_ids" t-as="b">
						<div t-foreach="b.salary_line_ids" t-as="l">
				     	<tr t-if="l.name=='Impot sur le revenu'">
                             <t t-set="total_cotis_employee" t-value="total_cotis_employee+1"/>
				             <td width="5%" style="border: 1px solid black;text-align: center;">
				             	<span t-field="b.employee_id.matricule"/>
				             </td>
				             <td width="55%" style="border: 1px solid black;text-align: center;">
				             	<span t-field="b.employee_id.name"/> <span t-field="b.employee_id.prenom"/>
				             </td>
                            <td width="10%" style="border: 1px solid black;text-align: center;">
				             	<span t-field="b.working_days"/>
                                <t t-set="tota3" t-value="total3+b.working_days"/>
				             </td>
				            <td width="15%" style="border: 1px solid black;text-align: center;">
				            	<span t-field="l.base"/>
				            	<t t-set="total1" t-value="total1+l.base"/>
				            </td>
				            <td width="15%" style="border: 1px solid black;text-align: center;">
                                <span t-field="l.subtotal_employee"/>
                                <t t-set="total2" t-value="total2+l.subtotal_employee"/>
				            </td>
				          </tr>
						</div>
					</div>
				</table>
				<br/>
				<table width="100%" style="border-collapse: collapse;">
					<thead>
				        <tr>
				        	<th style="border: 1px solid black;text-align: center;" width="60%">Total</th>
							<th style="border: 1px solid black;text-align: center;" width="10%"><t t-esc="total3"/></th>
							<th style="border: 1px solid black;text-align: center;" width="15%"><t t-esc="'%.2f'%total1"/></th>
				        	<th style="border: 1px solid black;text-align: center;" width="15%"><t t-esc="'%.2f'%total2"/></th>
				        	
                        </tr>
				     </thead>
				</table>
			</div>
		</t>
	</t>
	</t>
	</template>
	</data>
</odoo>