<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="wkf_document" model="workflow">
            <field name="name">hr.document.basic</field>
            <field name="osv">hr.document</field>
            <field name="on_create">True</field>
        </record>
        <!-- Activity -->
        <record id="document_act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_document"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">set_draft()</field>
        </record>
        <record id="document_act_confirm" model="workflow.activity">
            <field name="wkf_id" ref="wkf_document"/>
            <field name="name">confirm</field>
            <field name="kind">function</field>
            <field name="action">set_confirm()</field>
        </record>
        <record id="document_act_ready" model="workflow.activity">
            <field name="wkf_id" ref="wkf_document"/>
            <field name="name">ready</field>
            <field name="kind">function</field>
            <field name="action">set_ready()</field>
        </record>
        <record id="document_act_delivered" model="workflow.activity">
            <field name="wkf_id" ref="wkf_document"/>
            <field name="name">delivered</field>
            <field name="kind">function</field>
            <field name="action">set_delivered()</field>
        </record>
        <record id="document_act_refuse" model="workflow.activity">
            <field name="wkf_id" ref="wkf_document"/>
            <field name="flow_stop">True</field>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">set_cancel()</field>
        </record>
        <!-- Transistion -->
        <record id="document_trans_draft_confirm" model="workflow.transition">
            <field name="act_from" ref="document_act_draft"/>
            <field name="act_to" ref="document_act_confirm"/>
            <field name="signal">document_confirm</field>
        </record>
        <record id="document_trans_draft_refuse" model="workflow.transition">
            <field name="act_from" ref="document_act_draft"/>
            <field name="act_to" ref="document_act_refuse"/>
            <field name="signal">document_refuse1</field>
        </record>
        <record id="document_trans_confirm_ready" model="workflow.transition">
            <field name="act_from" ref="document_act_confirm"/>
            <field name="act_to" ref="document_act_ready"/>
            <field name="signal">document_ready</field>
            <field name="group_id" ref="hr.group_hr_user"/>
        </record>
        <record id="document_trans_confirm_refuse" model="workflow.transition">
            <field name="act_from" ref="document_act_confirm"/>
            <field name="act_to" ref="document_act_refuse"/>
            <field name="signal">document_refuse2</field>
        </record>
        <record id="document_trans_ready_delivered" model="workflow.transition">
            <field name="act_from" ref="document_act_ready"/>
            <field name="act_to" ref="document_act_delivered"/>
            <field name="signal">document_delivered</field>
            <field name="group_id" ref="hr.group_hr_user"/>
        </record>
        <record id="document_trans_ready_refuse" model="workflow.transition">
            <field name="act_from" ref="document_act_ready"/>
            <field name="act_to" ref="document_act_refuse"/>
            <field name="signal">document_refuse3</field>
            <field name="group_id" ref="hr.group_hr_user"/>
        </record>
    </data>
</openerp>
