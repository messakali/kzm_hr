<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data noupdate="0">
        <template id="report_warning">
            <t t-call="report.html_container">
                    <t t-as="w" t-foreach="docs">
                <t t-call="report.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-12 text-right">
                                    <span t-field="w.city"/>
                                    le
                                    <span t-field="w.edition_date"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 text-right">
                                    <span t-field="w.employee_id.full_name"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 text-right">
                                    Matricule :
                                    <span t-field="w.employee_id.otherid"/>
                                </div>
                            </div>
                            <div class="row mt16 mb16">
                                <div class="col-xs-12 text-left">
                                    <strong>
                                        <u>
                                            Objet :
                                            <span t-field="w.type_id.objet"/>
                                        </u>
                                    </strong>
                                </div>
                            </div>
                            <div class="row mt16 mb16">
                                <div class="col-xs-12 text-left">
                                    <strong>
                                        Madame, Monsieur,
                                    </strong>
                                </div>
                            </div>
                            <t t-as="line" t-foreach="w.type_id.line_before_ids">
                                <div class="row mt16 mb16">
                                    <div class="col-xs-12 text-left">
                                        <p>
                                            <span t-esc="line.name"/>
                                        </p>
                                    </div>
                                </div>
                            </t>
                            <div class="row mt16 mb16">
                                <div class="col-xs-12 text-justify">
                                    Cette sanction qui prend effet à compter du
                                    <span t-field="w.action_date"/>
                                    a été prise à votre encontre pour le motif suivant :
                                </div>
                            </div>
                            <div class="row mt16 mb16">
                                <div class="col-xs-11 col-xs-offset-1 text-left">
                                    <strong>
                                        <ul style="margin-left: 4px;">
                                            <li>
                                                <span t-esc="w.effet"/>
                                            </li>
                                        </ul>
                                    </strong>
                                </div>
                            </div>
                            <t t-as="line" t-foreach="w.type_id.line_after_ids">
                                <div class="row mt16 mb16">
                                    <div class="col-xs-12 text-justify">
                                        <p>
                                            <span t-esc="line.name"/>
                                        </p>
                                    </div>
                                </div>
                            </t>
                            <div class="row mt16 mb16">
                                <div class="col-xs-12 text-left">
                                    <strong>Directeur</strong>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <br/>
                            <div class="row mt16 mb16">
                                <div class="col-xs-12 text-left">
                                    C/C : Inspecteur de travail
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>
