<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
<!-- Employee Form Inherit -->
        <record id="view_hr_employee_damancom_form" model="ir.ui.view">
            <field name="name">hr.employee.kzm.form</field>
            <field name="model">hr.employee</field>
            <field  name="inherit_id" ref="l10n_ma_hr_payroll.view_hr_employee_kzm_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='paie']" position="after">
                    <group colspan="4" string="Situation">
                        <field colspan="4" name="situation_ids" nolabel="1">
                            <tree editable="bottom" string="Situation">
                                <field  name="contract_id"/>
                                <field  name="name"/>
                                <field  name="date"/>
                                <field  name="date_end"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
