<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="wkf_common_report" model="workflow">
            <field name="name">hr.common.report.basic</field>
            <field name="osv">hr.common.report</field>
            <field name="on_create">True</field>
        </record>
<!-- Activity -->
        <record id="common_report_act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_common_report"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">set_draft()</field>
        </record>
        <record id="common_report_act_confirm" model="workflow.activity">
            <field name="wkf_id" ref="wkf_common_report"/>
            <field name="name">confirm</field>
            <field name="kind">function</field>
            <field name="action">set_confirm()</field>
        </record>
        <record id="common_report_act_done" model="workflow.activity">
            <field name="wkf_id" ref="wkf_common_report"/>
            <field name="name">done</field>
            <field name="kind">function</field>
            <field name="action">set_done()</field>
        </record>
        <record id="common_report_act_paid" model="workflow.activity">
            <field name="wkf_id" ref="wkf_common_report"/>
            <field name="name">paid</field>
            <field name="kind">function</field>
            <field name="action">set_paid()</field>
        </record>
        <record id="common_report_act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="wkf_common_report"/>
            <field name="flow_stop">True</field>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">set_cancel()</field>
        </record>
<!-- Transistion -->
        <record id="common_report_trans_draft_confirm" model="workflow.transition">
            <field name="act_from" ref="common_report_act_draft"/>
            <field name="act_to" ref="common_report_act_confirm"/>
            <field name="signal">common_report_confirm</field>
        </record>
        <record id="common_report_trans_draft_cancel" model="workflow.transition">
            <field name="act_from" ref="common_report_act_draft"/>
            <field name="act_to" ref="common_report_act_cancel"/>
            <field name="signal">common_report_cancel1</field>
            <field name="group_id" ref="hr.group_hr_user"/>
        </record>
        <record id="common_report_trans_confirm_done" model="workflow.transition">
            <field name="act_from" ref="common_report_act_confirm"/>
            <field name="act_to" ref="common_report_act_done"/>
            <field name="signal">common_report_done</field>
            <field name="group_id" ref="hr.group_hr_user"/>
        </record>
        <record id="common_report_trans_confirm_cancel" model="workflow.transition">
            <field name="act_from" ref="common_report_act_confirm"/>
            <field name="act_to" ref="common_report_act_cancel"/>
            <field name="signal">common_report_cancel2</field>
        </record>
        <record id="common_report_trans_done_paid" model="workflow.transition">
            <field name="act_from" ref="common_report_act_done"/>
            <field name="act_to" ref="common_report_act_paid"/>
            <field name="signal">common_report_paid</field>
            <field name="group_id" ref="hr.group_hr_manager"/>
        </record>
        <record id="common_report_trans_done_cancel" model="workflow.transition">
            <field name="act_from" ref="common_report_act_done"/>
            <field name="act_to" ref="common_report_act_cancel"/>
            <field name="signal">common_report_cancel3</field>
            <field name="group_id" ref="group_forbidden_action"/>
        </record>
        <record id="common_report_trans_paid_cancel" model="workflow.transition">
            <field name="act_from" ref="common_report_act_paid"/>
            <field name="act_to" ref="common_report_act_cancel"/>
            <field name="signal">common_report_cancel4</field>
            <field name="group_id" ref="group_forbidden_action"/>
        </record>
    </data>
</openerp>
