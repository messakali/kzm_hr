<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="wkf_voucher" model="workflow">
            <field name="name">hr.voucher.order.basic</field>
            <field name="osv">hr.voucher.order</field>
            <field name="on_create">True</field>
        </record>
        <!-- Activity -->
        <record id="voucher_act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_voucher"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">set_draft()</field>
        </record>
        <record id="voucher_act_done" model="workflow.activity">
            <field name="wkf_id" ref="wkf_voucher"/>
            <field name="name">done</field>
            <field name="kind">function</field>
            <field name="action">set_done()</field>
        </record>
        <record id="voucher_act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="wkf_voucher"/>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">set_cancel()</field>
        </record>
        <!-- Transistion -->
        <record id="voucher_trans_draft_done" model="workflow.transition">
            <field name="act_from" ref="voucher_act_draft"/>
            <field name="act_to" ref="voucher_act_done"/>
            <field name="signal">voucher_done</field>
        </record>
        <record id="voucher_trans_draft_refuse" model="workflow.transition">
            <field name="act_from" ref="voucher_act_draft"/>
            <field name="act_to" ref="voucher_act_cancel"/>
            <field name="signal">voucher_refuse1</field>
        </record>
        <record id="voucher_trans_done_draft" model="workflow.transition">
            <field name="act_from" ref="voucher_act_done"/>
            <field name="act_to" ref="voucher_act_draft"/>
            <field name="signal">voucher_draft</field>
            <field name="group_id" ref="hr.group_hr_user"/>
        </record>
        <record id="voucher_trans_done_refuse" model="workflow.transition">
            <field name="act_from" ref="voucher_act_done"/>
            <field name="act_to" ref="voucher_act_cancel"/>
            <field name="signal">voucher_refuse2</field>
        </record>
        <record id="voucher_trans_refuse_draft" model="workflow.transition">
            <field name="act_from" ref="voucher_act_cancel"/>
            <field name="act_to" ref="voucher_act_draft"/>
            <field name="signal">voucher_reset</field>
        </record>
    </data>
</openerp>
