<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="wkf_warning" model="workflow">
            <field name="name">hr.employee.warning.basic</field>
            <field name="osv">hr.employee.warning</field>
            <field name="on_create">True</field>
        </record>
        <!-- Activity -->
        <record id="warning_act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_warning"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">set_draft()</field>
        </record>
        <record id="warning_act_sent" model="workflow.activity">
            <field name="wkf_id" ref="wkf_warning"/>
            <field name="name">sent</field>
            <field name="kind">function</field>
            <field name="action">set_sent()</field>
        </record>
        <record id="warning_act_received" model="workflow.activity">
            <field name="wkf_id" ref="wkf_warning"/>
            <field name="name">received</field>
            <field name="kind">function</field>
            <field name="action">set_received()</field>
        </record>
        <record id="warning_act_refuse" model="workflow.activity">
            <field name="wkf_id" ref="wkf_warning"/>
            <field name="flow_stop">True</field>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">set_cancel()</field>
        </record>
        <!-- Transistion -->
        <record id="warning_trans_draft_sent" model="workflow.transition">
            <field name="act_from" ref="warning_act_draft"/>
            <field name="act_to" ref="warning_act_sent"/>
            <field name="signal">warning_sent</field>
        </record>
        <record id="warning_trans_draft_refuse" model="workflow.transition">
            <field name="act_from" ref="warning_act_draft"/>
            <field name="act_to" ref="warning_act_refuse"/>
            <field name="signal">warning_refuse1</field>
        </record>
        <record id="warning_trans_sent_received" model="workflow.transition">
            <field name="act_from" ref="warning_act_sent"/>
            <field name="act_to" ref="warning_act_received"/>
            <field name="signal">warning_received</field>
            <field name="group_id" ref="hr.group_hr_user"/>
        </record>
        <record id="warning_trans_sent_refuse" model="workflow.transition">
            <field name="act_from" ref="warning_act_sent"/>
            <field name="act_to" ref="warning_act_refuse"/>
            <field name="signal">warning_refuse2</field>
        </record>
    </data>
</openerp>