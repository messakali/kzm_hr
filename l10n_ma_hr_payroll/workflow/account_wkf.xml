<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="wkf_account" model="workflow">
            <field name="name">hr.payslip.account.basic</field>
            <field name="osv">hr.payslip.account</field>
            <field name="on_create">True</field>
        </record>
<!-- Activity -->
        <record id="account_act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_account"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">set_draft()</field>
        </record>
        <record id="account_act_confirm" model="workflow.activity">
            <field name="wkf_id" ref="wkf_account"/>
            <field name="name">confirm</field>
            <field name="kind">function</field>
            <field name="action">set_confirm()</field>
        </record>
        <record id="account_act_done" model="workflow.activity">
            <field name="wkf_id" ref="wkf_account"/>
            <field name="name">done</field>
            <field name="kind">function</field>
            <field name="action">set_done()</field>
        </record>
        <record id="account_act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="wkf_account"/>
            <field name="flow_stop">True</field>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">set_cancel()</field>
        </record>
<!-- Transistion -->
        <record id="account_trans_draft_confirm" model="workflow.transition">
            <field name="act_from" ref="account_act_draft"/>
            <field name="act_to" ref="account_act_confirm"/>
            <field name="signal">account_confirm</field>
        </record>
        <record id="account_trans_draft_cancel" model="workflow.transition">
            <field name="act_from" ref="account_act_draft"/>
            <field name="act_to" ref="account_act_cancel"/>
            <field name="signal">account_cancel1</field>
            <field name="group_id" ref="hr.group_hr_user"/>
        </record>
        <record id="account_trans_confirm_done" model="workflow.transition">
            <field name="act_from" ref="account_act_confirm"/>
            <field name="act_to" ref="account_act_done"/>
            <field name="signal">account_done</field>
            <field name="group_id" ref="hr.group_hr_user"/>
        </record>
        <record id="account_trans_confirm_cancel" model="workflow.transition">
            <field name="act_from" ref="account_act_confirm"/>
            <field name="act_to" ref="account_act_cancel"/>
            <field name="signal">account_cancel2</field>
        </record>
        <record id="account_trans_done_cancel" model="workflow.transition">
            <field name="act_from" ref="account_act_done"/>
            <field name="act_to" ref="account_act_cancel"/>
            <field name="signal">account_cancel3</field>
            <field name="group_id" ref="group_forbidden_action"/>
        </record>
    </data>
</openerp>
