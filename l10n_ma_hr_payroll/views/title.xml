<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
<!-- Form -->
        <record id="view_partner_title_hr_inherit_form" model="ir.ui.view">
            <field name="name">res.partner.title.form</field>
            <field name="model">res.partner.title</field>
            <field  name="inherit_id" ref="base.view_partner_title_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='shortcut']" position="after">
                    <field  name="gender"/>
                    <field  name="employee"/>
                </xpath>
            </field>
        </record>
<!-- Tree -->
        <record id="view_partner_title_hr_inherit_tree" model="ir.ui.view">
            <field name="name">res.partner.title.tree</field>
            <field name="model">res.partner.title</field>
            <field  name="inherit_id" ref="base.view_partner_title_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='shortcut']" position="before">
                    <field  name="gender"/>
                    <field  name="employee"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
