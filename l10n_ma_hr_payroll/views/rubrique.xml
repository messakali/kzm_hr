<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_hr_rubrique_tree" model="ir.ui.view">
            <field name="name">hr.rubrique.tree</field>
            <field name="model">hr.rubrique</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Rubriques">
                    <field name="sequence" widget="handle" />
                    <field name="code" />
                    <field name="name" />
                    <field name="rate_type" />
                    <field name="contribution_id" />
                    <field name="active" />
                </tree>
            </field>
        </record>
        <record id="view_hr_rubrique_form" model="ir.ui.view">
            <field name="name">hr.rubrique.form</field>
            <field name="model">hr.rubrique</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Rubriques">
                    <group colspan="4" col="4">
                        <group colspan="2">
                            <field name="name" />
                            <field name="code" />
                            <field name="rate_type" />
                            <field name="sequence" />
                        </group>
                        <group colspan="2"  groups="hr.group_hr_user">
                            <field name="contribution_id" />
                            <field name="show_on_payslip" />
                            <field name="show_on_ledger" />
                            <field name="export_ok" />
                            <field name="active" />
                        </group>
                        <group colspan="2" string="Exonération" attrs="{'invisible': [('rate_type','=', 'imp')]}"  groups="hr.group_hr_user">
                            <field name="rate_salariale" invisible="1" />
                            <field name="plafond_salariale_type" />
                            <field name="plafond_salariale" attrs="{'invisible': [('plafond_salariale_type','=', 'code')]}" />
                            <field name="code_python" attrs="{'invisible': [('plafond_salariale_type','!=', 'code')],'required': [('plafond_salariale_type','=', 'code')]}"
                            />
                        </group>
                        <group colspan="2" string="Calcul" groups="hr.group_hr_user">
                            <field name="auto_compute" />
                            <separator string="Code" attrs="{'invisible': [('auto_compute','=', False)]}" colspan="4"/>
                            <field name="compute_code" attrs="{'invisible': [('auto_compute','=', False)],'required': [('auto_compute','=', True)]}" nolabel="1" colspan="4"/>
                        </group>
                        <group colspan="2" string="Taxable" invisible="1"  groups="hr.group_hr_user">
                            <field name="rate_patronale" />
                            <field name="plafond_patronale_type" invisible="1" />
                            <field name="plafond_patronale" invisible="1" />
                        </group>
                        <group colspan="2" string="Workflow"  groups="hr.group_hr_user">
                            <field name="can_reset" />
                            <field name="can_request" />
                        </group>
                        <group colspan="4" string="Comptabilité"  groups="hr.group_hr_user">
                            <field name="account_debit" />
                            <field name="account_credit" />
                            <field name="analytic_account_id" />
                            <field name="account_tax_id" />
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_hr_rubrique_search" model="ir.ui.view">
            <field name="name">hr.rubrique.search</field>
            <field name="model">hr.rubrique</field>
            <field name="type">search</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Rubriques">
                    <field name="name" filter_domain="['|',('name','like', self ),('code','like', self ) ]"/>
                    <field name="contribution_id" />
                    <field name="active" />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_hr_rubrique_view">
            <field name="name">Rubriques</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.rubrique</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_rubrique_search" />
            <field name="domain">[]</field>
            <field name="context">{'active_test': False}</field>
        </record>

        <menuitem id="menu_hr_rubrique" parent="hr_payroll.menu_hr_payroll_configuration" sequence="22" action="act_open_hr_rubrique_view" />
    </data>
</openerp>
