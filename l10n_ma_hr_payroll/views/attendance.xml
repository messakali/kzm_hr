<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <!-- Attendance -->
        <record id="view_hr_attendance_kzm_form" model="ir.ui.view">
            <field name="name">hr.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">red:action_state in
                        ['in_late','out_early'];green:action_state in
                        ['in_early','out_late']</attribute>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="gap"/>
                    <field name="action_state"/>
                </xpath>
            </field>
        </record>
        <!-- Employee -->
        <record id="view_hr_employee_attendance_tree" model="ir.ui.view">
            <field name="name">hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <tree colors="red:attendance_state=='absent' ; green:attendance_state=='present'"
                    string="Pointage en temps réel">
                    <field name="name"/>
                    <field name="attendance_state"/>
                    <field name="action_state"/>
                    <field name="gap"/>
                    <button context="{'type':'sign_out'}" groups="hr.group_hr_manager"
                        icon="STOCK_QUIT" name="attendance_action_change" string="Sign Out" type="object"/>
                    <button context="{'type':'sign_in'}" groups="hr.group_hr_manager"
                        icon="terp-gtk-go-back-rtl" name="attendance_action_change" string="Sign In" type="object"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_employee_attendance_search" model="ir.ui.view">
            <field name="name">hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="type">search</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <search string="Pointage en temps réel">
                    <field name="name" select="True"/>
                </search>
            </field>
        </record>
        <record id="act_open_hr_employee_attendance_view" model="ir.actions.act_window">
            <field name="name">Pointage en temps réel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_hr_employee_attendance_tree"/>
            <field name="search_view_id" ref="view_hr_employee_attendance_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <menuitem action="act_open_hr_employee_attendance_view"
            id="menu_hr_employee_attendance" parent="hr_attendance.menu_hr_attendance_root" sequence="30"/>

    </data>
</openerp>
