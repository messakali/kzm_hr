<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
<!-- Warning Type -->
        <menuitem  id="menu_hr_warning_config" name="Avertissements" parent="hr.menu_human_resources_configuration" sequence="13"/>
        <record id="view_hr_warning_type_tree" model="ir.ui.view">
            <field name="name">hr.employee.warning.type.tree</field>
            <field name="model">hr.employee.warning.type</field>
            <field name="type">tree</field>
            <field  eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Types des avertissements">
                    <field  name="name"/>
                    <field  name="objet"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_warning_type_form" model="ir.ui.view">
            <field name="name">hr.employee.warning.type.form</field>
            <field name="model">hr.employee.warning.type</field>
            <field name="type">form</field>
            <field  eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Types des avertissements">
                    <group colspan="4">
                        <field  name="name"/>
                        <field  name="objet"/>
                    </group>
                    <group colspan="4" string="Lignes d'avant">
                        <field colspan="4" name="line_before_ids" nolabel="1">
                            <tree editable="bottom" string="Lignes d'avant">
                                <field  name="sequence" widget="handle"/>
                                <field  name="name"/>
                            </tree>
                        </field>
                    </group>
                    <group colspan="4" string="Lignes d'après">
                        <field colspan="4" name="line_after_ids" nolabel="1">
                            <tree editable="bottom" string="Lignes d'après">
                                <field  name="sequence" widget="handle"/>
                                <field  name="name"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_hr_warning_type_search" model="ir.ui.view">
            <field name="name">hr.employee.warning.type.search</field>
            <field name="model">hr.employee.warning.type</field>
            <field name="type">search</field>
            <field  eval="8" name="priority"/>
            <field name="arch" type="xml">
                <search string="Types des avertissements">
                    <field  name="name" select="True"/>
                    <field  name="objet"/>
                </search>
            </field>
        </record>
        <record id="act_open_hr_warning_type_view" model="ir.actions.act_window">
            <field name="name">Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.warning.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field  name="search_view_id" ref="view_hr_warning_type_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <menuitem  action="act_open_hr_warning_type_view" id="menu_hr_warning_type" parent="menu_hr_warning_config" sequence="12"/>
<!-- Warning -->
        <record id="view_hr_warning_tree" model="ir.ui.view">
            <field name="name">hr.employee.warning.tree</field>
            <field name="model">hr.employee.warning</field>
            <field name="type">tree</field>
            <field  eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree colors="grey:state in ('cancel','received') ; blue:state=='draft' " string="Avertissements">
                    <field  name="employee_id"/>
                    <field  name="type_id"/>
                    <field  name="action_date"/>
                    <field  name="edition_date"/>
                    <field  name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_warning_form" model="ir.ui.view">
            <field name="name">hr.employee.warning.form</field>
            <field name="model">hr.employee.warning</field>
            <field name="type">form</field>
            <field  eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Avertissements">
                    <header>
                        <button  class="oe_highlight" name="warning_sent" states="draft" string="Envoyer" type="workflow"/>
                        <button  name="warning_refuse1" states="draft" string="Annuler" type="workflow"/>
                        <button  class="oe_highlight" name="warning_received" states="sent" string="Reçu" type="workflow"/>
                        <button  name="warning_refuse2" states="sent" string="Refuser" type="workflow"/>
                        <button  name="action_print" string="Imprimer" type="object"/>
                        <field  name="state" statusbar_visible="draft,sent,received" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field  attrs="{'readonly':[('state','!=','draft')]}" name="employee_id"/>
                                <field  attrs="{'readonly':[('state','!=','draft')]}" name="type_id" widget="selection"/>
                                <field  attrs="{'readonly':[('state','!=','draft')]}" name="effet" />
                            </group>
                            <group>
                                <field  attrs="{'readonly':[('state','!=','draft')]}" name="action_date"/>
                                <field  attrs="{'readonly':[('state','!=','draft')]}" name="edition_date"/>
                                <field  attrs="{'readonly':[('state','!=','draft')]}" name="city"/>
                            </group>
                        </group>
                        <field  attrs="{'readonly':[('state','!=','draft')]}" colspan="4" name="notes" nolabel="1" placeholder="Ajouter un commentaire..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field  name="message_follower_ids" widget="mail_followers"/>
                        <field  name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_hr_warning_search" model="ir.ui.view">
            <field name="name">hr.employee.warning.search</field>
            <field name="model">hr.employee.warning</field>
            <field name="type">search</field>
            <field  eval="8" name="priority"/>
            <field name="arch" type="xml">
                <search string="Avertissements">
                    <field  name="type_id" select="True"/>
                    <field  name="employee_id" select="True"/>
                    <filter  domain="[('state','=', 'draft')]" name="draft" string="Brouillon"/>
                    <filter  domain="[('state','=', 'sent')]" name="confirm" string="Envoyer"/>
                    <filter  domain="[('state','=', 'received')]" name="delivred" string="Reçu"/>
                    <filter  domain="[('state','=', 'cancel')]" name="delivred" help="Annulé"/>
                    <newline/>
                    <filter  domain="[('employee_id.user_id','=', uid)]" help="Mes demandes" name="my_requests" string="Mes demandes"/>
                    <filter  domain="[('message_unread','=', True)]" name="unread" string="Messages non lus"/>
                    <filter  domain="['|',('date','ilike',time.strftime('%%Y-%%m-'))]" name="this_month" string="Ce mois"/>
                    <group expand="0" string="Group By">
                        <filter  context="{'group_by':'employee_id'}" domain="[]" icon="terp-partner" string="Employé"/>
                        <filter  context="{'group_by':'type_id'}" domain="[]" icon="terp-folder-orange" string="Type"/>
                        <filter  context="{'group_by':'state'}" domain="[]" icon="terp-stock_effects-object-colorize" string="État"/>
                    </group>
                </search>
            </field>
        </record>
<!-- All -->
        <record id="act_open_hr_warning_view_all" model="ir.actions.act_window">
            <field name="name">Avertissements</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.warning</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record id="act_open_hr_warning_view_form_all" model="ir.actions.act_window.view">
            <field  name="act_window_id" ref="act_open_hr_warning_view_all"/>
            <field  eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field  name="view_id" ref="view_hr_warning_form"/>
        </record>
        <record id="act_open_hr_warning_view_tree_all" model="ir.actions.act_window.view">
            <field  name="act_window_id" ref="act_open_hr_warning_view_all"/>
            <field  eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field  name="view_id" ref="view_hr_warning_tree"/>
        </record>
        <menuitem  action="act_open_hr_warning_view_all" groups="l10n_ma_hr_payroll.group_hr_menu_warning"
            id="menu_open_warning_all_employees" parent="menu_hr_main_administration" sequence="40"/>
        <!-- Context -->
        <record id="act_open_hr_warning_view_context" model="ir.actions.act_window">
            <field name="name">Avertissements</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.warning</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('employee_id','in', context.get('active_ids',[]))]</field>
            <field name="context">{'default_employee_id' : context.get('active_id', False)}</field>
        </record>
        <record id="act_open_hr_warning_view_form" model="ir.actions.act_window.view">
            <field  name="act_window_id" ref="act_open_hr_warning_view_context"/>
            <field  eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field  name="view_id" ref="view_hr_warning_form"/>
        </record>
        <record id="act_open_hr_warning_view_tree" model="ir.actions.act_window.view">
            <field  name="act_window_id" ref="act_open_hr_warning_view_context"/>
            <field  eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field  name="view_id" ref="view_hr_warning_tree"/>
        </record>
    </data>
</openerp>
