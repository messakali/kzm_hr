<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_hr_contribution_register_kzm_form" model="ir.ui.view">
            <field name="name">hr.contribution.register.form</field>
            <field name="model">hr.contribution.register</field>
            <field name="inherit_id" ref="hr_payroll.hr_contribution_register_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="partner_id" />
                    <field name="debit" />
                </xpath>
            </field>
        </record>
        <record id="view_hr_contribution_register_kzm_tree" model="ir.ui.view">
            <field name="name">hr.contribution.register.tree</field>
            <field name="model">hr.contribution.register</field>
            <field name="inherit_id" ref="hr_payroll.hr_contribution_register_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="partner_id" />
                    <field name="debit" sum="Total" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>
