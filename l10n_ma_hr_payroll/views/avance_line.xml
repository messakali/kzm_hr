        </record>
        <menuitem  action="act_open_hr_avance_line_view" groups="l10n_ma_hr_payroll.group_hr_menu_avance" id="menu_hr_avance_line"
            parent="menu_hr_main_kzm_misc" sequence="10"/>
    </data>
</openerp>
