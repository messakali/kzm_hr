<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_hr_avance_line_tree" model="ir.ui.view">
            <field name="name">hr.avance.line.tree</field>
            <field name="model">hr.avance.line</field>
            <field name="type">tree</field>
            <field  eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree colors="grey:state in ['done','cancel'] ; blue:state=='draft'" fonts="bold:message_unread==True" string="Avances / Prêts">
                    <field  name="name"/>
                    <field  name="avance_id"/>
                    <field  name="employee_id"/>
                    <field  name="date_start"/>
                    <field  name="date_end"/>
                    <field  name="amount" sum="Total"/>
                    <field  name="state"/>
                    <field  invisible="1" name="message_unread"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_avance_line_form" model="ir.ui.view">
            <field name="name">hr.avance.line.form</field>
            <field name="model">hr.avance.line</field>
            <field name="type">form</field>
            <field  eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Avances / Prêts">
                    <field  invisible="1" name="can_reset"/>
                    <header>
                        <button  class="oe_highlight" name="avance_confirm" states="draft" string="Confirmer l'avance" type="workflow"/>
                        <button  name="avance_refuse1" states="draft" string="Refuser" type="workflow"/>
                        <button  name="generate_lines" string="Générer les échéances" type="object" attrs="{'invisible': ['|',('interest_rate','!=', 0),('state','not in','draft')]}" />
                        <button  name="generate_lines"  string="Générer le tableau d'amortissement" type="object" attrs="{'invisible': ['|',('interest_rate','=', 0),('state','not in','draft')]}" />
                        <button  class="oe_highlight" name="avance_validate" states="confirm" string="Valider le reste des échéances" type="workflow"/>
                        <button  name="avance_refuse2" states="confirm" string="Refuser" type="workflow"/>
                        <button  class="oe_highlight" name="avance_done" states="validate" string="Clôturer" type="workflow"/>
                        <button  name="avance_refuse3" states="validate" string="Refuser" type="workflow"/>
                        <button  attrs="{'invisible': ['|', ('can_reset', '=', False), ('state', 'not in', ['done', 'cancel'])]}"
                            name="avance_reset_draft" string="Remettre en brouillon" type="workflow"/>
                        <field  name="state" statusbar_visible="draft,confirm,validate,done" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field  name="name"/>
                                <field  attrs="{'required' : [('interest_rate','=', 0)] }" name="date"/>
                                <field  name="date_start" string="Date de début"/>
                                <field  name="date_end"/>
                                <label  for="echenace_nbr" string="Nombre des échéances"/>
                                <div>
                                    <field  class="oe_inline" name="echeance_nbr"/>
                                    <label  class="oe_inline" string=" months."/>
                                </div>
                                <label  attrs="{'invisible': [('interest_rate','>', 0)]}" for="every" string="Périodicité"/>
                                <div attrs="{'invisible': [('interest_rate','>', 0)]}">
                                    <field  class="oe_inline" name="every"/>
                                    <label  class="oe_inline" string=" months."/>
                                </div>
                            </group>
                            <group>
                                <field  name="avance_id" widget="selection"/>
                                <label for="journal_id" attrs="{'invisible': [('interest_rate','!=', 0)]}"/>
                                <div>
                                    <field  attrs="{'invisible': [('interest_rate','!=', 0)], 'required': [('interest_rate','=', 0)]}" name="journal_id"
                                        widget="selection" class="oe_inline"/>
                                    <field  attrs="{'invisible': [('interest_rate','!=', 0)], 'required': [('interest_rate','=', 0)]}" name="voucher_mode"
                                        class="oe_inline"/>
                                </div>
                                <field  name="employee_id"/>
                                <field  name="amount"/>
                                <field  attrs="{ 'invisible': [('interest_rate','=', 0)]}" name="rate"/>
                                <field  attrs="{'invisible': [('interest_rate','=', 0)]}" name="echeance"/>
                                <field  invisible="1" name="interest_rate"/>
                                <field name="voucher_ok" attrs="{'invisible': [('interest_rate','!=', 0)]}"/>
                                <field name="voucher_date" attrs="{'invisible': [('interest_rate','!=', 0)]}"/>
                                <field name="move_id"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page attrs="{'invisible': [('interest_rate','=', 0)]}" string="Tableau d'amortissement">
                                <field colspan="4" name="line_ids" nolabel="1">
                                    <tree colors="grey:state=='done';blue:state=='draft' " string="Lignes">
                                        <field  name="date"/>
                                        <field  name="capital_restant_before"/>
                                        <field  name="interest" sum="Intérêts annuels (HT)"/>
                                        <field  name="interest_tva" sum="TVA sur les intérêts"/>
                                        <field  name="interest_ttc" sum="Total TTC des intérêts"/>
                                        <field  name="amortissement" sum="Amortissements"/>
                                        <field  name="echeance_ht" sum="Echéances HT"/>
                                        <field  name="echeance_ttc" sum="Echéances TTC"/>
                                        <field  name="capital_restant_after"/>
                                        <field  invisible="1" name="state"/>
                                        <field  name="move_id" invisible="1" />
                                        <button  attrs="{'invisible': [('state','=', 'done')]}" icon="STOCK_EXECUTE" name="set_done" string="Valider" type="object"/>
                                    </tree>
                                </field>
                            </page>
                            <page attrs="{'invisible': [('interest_rate','>', 0)]}" string="Echéances">
                                <field colspan="4" name="echeance_line_ids" nolabel="1">
                                    <tree colors="grey:state=='done';red:state=='cancel';blue:state=='draft' " string="Lignes">
                                        <field  name="date"/>
                                        <field  name="amount" sum="Total"/>
                                        <field  invisible="1" name="state"/>
                                        <field  name="move_id" invisible="1" />
                                        <field  name="avance_state" invisible="0" />
                                        <button  groups="hr.group_hr_manager" icon="STOCK_ADD" name="add_month" string="Add month" type="object"/>
                                        <button  groups="hr.group_hr_manager" icon="STOCK_REMOVE" name="minus_month" string="Minus month" type="object"/>
                                        <button  attrs="{'invisible': ['|',('state','=', 'done'),('avance_state','not in', ['confirm','validate','done'])]}" groups="hr.group_hr_manager" icon="STOCK_EXECUTE" name="set_done"
                                            string="Valider" type="object"/>
                                        <button  attrs="{'invisible': ['|',('state','=', 'cancel'),('avance_state','not in', ['confirm','validate','done'])]}" groups="hr.group_hr_manager" icon="STOCK_CLOSE" name="set_cancel"
                                            string="Annuler" type="object"/>
                                    </tree>
                                    <form string="Lignes">
                                        <group>
                                            <group>
                                                <field  name="date"/>
                                                <field  name="amount" sum="Total"/>
                                            </group>
                                            <group>
                                                <field   name="state" readonly="1" />
                                                <field  name="move_id"  readonly="1" />
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Notes">
                                <field  colspan="4" name="notes" nolabel="1" placeholder="Ajouter un motif..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field  name="message_follower_ids" widget="mail_followers"/>
                        <field  name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
