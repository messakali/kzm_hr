<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_product_template_form" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="hr_expense.view_product_hr_expense_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='general_information']/group[last()]" position="after">
                    <group colspan="2" string="Notes de frais" attrs="{'invisible': [('can_be_expensed','=', False)]}">
                        <field name="default_expense_ok" />
                        <field name="payroll_type" />
                        <field name="payroll_rubrique_id" attrs="{'required': [('payroll_type','=', 'rubrique')],'invisible': [('payroll_type','!=', 'rubrique')]}" />
                        <field name="payroll_avance_id" attrs="{'required': [('payroll_type','=', 'avance')],'invisible': [('payroll_type','!=', 'avance')]}" />
                        <field name="payroll_avantage_id" attrs="{'required': [('payroll_type','=', 'avantage')],'invisible': [('payroll_type','!=', 'avantage')]}" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
