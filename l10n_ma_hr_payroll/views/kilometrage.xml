<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_hr_km_tree" model="ir.ui.view">
            <field name="name">hr.employee.km.tree</field>
            <field name="model">hr.employee.km</field>
            <field name="type">tree</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree colors="grey:state=='done' ; blue:state=='draft' " string="Kilométrage">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="cv"/>
                    <field name="value" sum="Total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_km_form" model="ir.ui.view">
            <field name="name">hr.employee.km.form</field>
            <field name="model">hr.employee.km</field>
            <field name="type">form</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Kilométrage">
                    <header>
                        <button class="oe_highlight" name="set_done" states="draft" string="Confirmer" type="object" groups="hr.group_hr_user"/>
                        <button  name="set_draft" states="done" string="Remettre en brouillon" type="object" groups="hr.group_hr_user"/>
                        <field name="state" statusbar_visible="draft,done" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group name="general" string="Général">
                                <field name="name"/>
                                <field name="employee_id"/>
                                <field name="date"/>
                            </group>
                            <group name="params" string="Valeurs">
                                <label for="cv" string="Puissance fiscale"/>
                                <div>
                                  <field name="cv" class="oe_inline"/>
                                  C.V.
                                </div>
                                <label for="value" string="Kilométrage"/>
                                <div>
                                  <field name="value" class="oe_inline"/>
                                  km.
                                </div>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_hr_km_search" model="ir.ui.view">
            <field name="name">hr.employee.km.search</field>
            <field name="model">hr.employee.km</field>
            <field name="type">search</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <search string="Kilométrage">
                    <field name="name" select="True"/>
                    <field name="employee_id" select="True"/>
                    <field name="date" select="True"/>
                    <field name="cv" select="True"/>
                    <newline/>
                    <filter domain="[('state','=', 'draft')]" name="draft" string="Brouillon"/>
                    <filter domain="[('state','=', 'done')]" name="confirm" help="Terminé"/>
                    <newline/>
                    <filter name="this_month" domain="[('date','like',time.strftime('%%Y-%%m-'))]" string="Ce mois" />
                    <group expand="0" string="Group By">
                        <filter context="{'group_by':'employee_id'}" domain="[]" icon="terp-partner" string="Employé"/>
                        <filter context="{'group_by':'cv'}" domain="[]" icon="terp-folder-orange" string="Puissance fiscale" />
                        <filter context="{'group_by':'state'}" domain="[]" icon="terp-stock_effects-object-colorize" string="État"/>
                    </group>
                </search>
            </field>
        </record>
<!-- All -->
        <record id="act_open_hr_km_view_all" model="ir.actions.act_window">
            <field name="name">Kilométrage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.km</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_search_this_month' : 1}</field>
        </record>
        <record id="act_open_hr_km_view_context" model="ir.actions.act_window">
            <field name="name">Kilométrage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.km</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('employee_id','in', context.get('active_ids',[]))]</field>
            <field name="context">{'default_employee_id' : context.get('active_id', False)}</field>
        </record>
        <menuitem action="act_open_hr_km_view_all" groups="l10n_ma_hr_payroll.group_hr_menu_kilometrage"
            id="menu_open_km_all_employees" parent="menu_hr_main_administration" sequence="40"/>
    </data>
</openerp>
