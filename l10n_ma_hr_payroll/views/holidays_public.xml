<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_hr_holidays_public_tree" model="ir.ui.view">
            <field name="name">hr.holidays.public.tree</field>
            <field name="model">hr.holidays.public</field>
            <field name="type">tree</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Jours fériés" colors="grey:ignore==True">
                    <field name="name" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="ignore" />
                    <field name="year" invisible="1" />
                </tree>
            </field>
        </record>
        <record id="view_hr_holidays_public_calendar" model="ir.ui.view">
            <field name="name">hr.holidays.public.calendar</field>
            <field name="model">hr.holidays.public</field>
            <field name="type">calendar</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <calendar string="Jours fériés" color="name" date_start="date_start" date_stop="date_end" quick_add="False">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <record id="view_hr_holidays_public_form" model="ir.ui.view">
            <field name="name">hr.holidays.public.form</field>
            <field name="model">hr.holidays.public</field>
            <field name="type">form</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Jours fériés">
                    <group colspan="4" col="4">
                        <field name="name" />
                        <field name="ignore" />
                        <group colspan="4" col="4" string="Dates">
                            <field name="date_start" />
                            <field name="date_end" />
                            <field name="year" invisible="1" />
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_hr_holidays_public_search" model="ir.ui.view">
            <field name="name">hr.holidays.public.search</field>
            <field name="model">hr.holidays.public</field>
            <field name="type">search</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Jours fériés">
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="year" select="True" />
                    <filter name="this_year" domain="[('year','=',time.strftime('%%Y'))]" string="Cette année" />
                    <filter name="ignore" domain="[('ignore','=',True)]" string="Jours ignorés dans la paie" />
                    <filter name="notignore" domain="[('ignore','=',False)]" string="Jours à compter dans la paie" />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_hr_holidays_public_view">
            <field name="name">Jours fériés</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.holidays.public</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="search_view_id" ref="view_hr_holidays_public_search" />
            <field name="domain">[]</field>
            <field name="context">{'search_default_this_year': 1}</field>
        </record>
        <menuitem id="menu_hr_holidays_public" parent="hr_holidays.menu_hr_holidays_configuration" sequence="20" action="act_open_hr_holidays_public_view"
        />
    </data>
</openerp>
