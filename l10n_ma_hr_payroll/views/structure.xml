<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_hr_payroll_structure_advantages_tree" model="ir.ui.view">
            <field name="name">hr.payroll.structure.tree</field>
            <field name="model">hr.payroll.structure</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payroll_structure_list_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="cnss_ok" />
                    <field name="cimr_ok" />
                    <field name="assurance_ok" />
                    <field name="advantages" />
                </xpath>
            </field>
        </record>
        <record id="view_hr_payroll_structure_advantages_form" model="ir.ui.view">
            <field name="name">hr.payroll.structure.form</field>
            <field name="model">hr.payroll.structure</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_employee_grade_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="after">
                    <group>
                        <field name="cnss_ok" />
                        <field name="cimr_ok" />
                        <field name="assurance_ok" />
                        <field name="advantages" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
