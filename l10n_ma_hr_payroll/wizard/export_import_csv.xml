<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <!-- Export -->
        <record id="view_hr_saisie_export_form" model="ir.ui.view">
            <field name="name">hr.saisie.export.form</field>
            <field name="model">hr.saisie.export</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Export CSV">
                <field invisible="1" name="state"/>
                    <group attrs="{'invisible': [('state','=', 'done')]}" colspan="2">
                        <field name="run_id" widget="selection"/>
                    </group>
                    <group attrs="{'invisible': [('state','=', 'draft')]}" colspan="2">
                        <label for="Field" string="Fichier CSV"/>
                        <div>
                            <field class="oe_inline" filename="name" name="file"/>
                            <field class="oe_inline" invisible="1" name="name"/>
                        </div>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="exporter" states="draft" string="Exporter"
                            type="object"/>
                        <button name="retour" states="done" string="Retour" type="object"/>
                        <button class="oe_link" special="cancel" string="Fermer" type="special"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="hr_saisie_export_wizard_action" model="ir.actions.act_window">
            <field name="name">Export CSV</field>
            <field name="res_model">hr.saisie.export</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
        <!-- Export CSV Saisie -->
        <menuitem action="hr_saisie_export_wizard_action" groups="l10n_ma_hr_payroll.group_hr_menu_csv"
            id="hr_saisie_export_wizard_menu" parent="menu_hr_saisie_main" sequence="100"/>
        <!-- Import -->
        <record id="view_hr_saisie_import_form" model="ir.ui.view">
            <field name="name">hr.saisie.import.form</field>
            <field name="model">hr.saisie.import</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Import CSV">
                    <group colspan="2">
                        <field name="run_id" widget="selection"/>
                        <label for="Field" string="Fichier CSV"/>
                        <div>
                            <field class="oe_inline" filename="name" name="file"/>
                            <field class="oe_inline" invisible="1" name="name"/>
                        </div>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="import_csv" string="Import" type="object"/>
                        ou
                        <button class="oe_link" special="cancel" string="Annuler" type="special"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="hr_saisie_import_wizard_action" model="ir.actions.act_window">
            <field name="name">Import CSV</field>
            <field name="res_model">hr.saisie.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
        <!-- Import CSV Saisie -->
        <menuitem action="hr_saisie_import_wizard_action" groups="l10n_ma_hr_payroll.group_hr_menu_csv"
            id="hr_saisie_import_wizard_menu" parent="menu_hr_saisie_main" sequence="200"/>
    </data>
</openerp>
