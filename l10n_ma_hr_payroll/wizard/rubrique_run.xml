<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_hr_rubrique_run_form" model="ir.ui.view">
            <field name="name">hr.rubrique.run.form</field>
            <field name="model">hr.rubrique.run</field>
            <field name="type">form</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Lot des éléments">
                    <group>
                        <group>
                            <field name="name" />
                            <field name="allocation_mode" />
                            <field name="employee_ids" attrs="{'invisible': [('allocation_mode','!=', 'employee')], 'required': [('allocation_mode','=', 'employee')]}" widget="many2many_tags" />
                            <field name="category_ids" attrs="{'invisible': [('allocation_mode','!=', 'category')], 'required': [('allocation_mode','=', 'category')]}" widget="many2many_tags" />
                            <label for="date_start" string="Durée" />
                            <div>
                                <group>
                                    <field name="date_start" nolabel="1" class="oe_inline" />
                                    <label string="-" class="oe_inline" />
                                    <field name="date_end" nolabel="1" class="oe_inline" />
                                </group>
                            </div>
                        </group>
                        <group>
                            <field name="state" required="1" />
                            <field name="rubrique_id" widget="selection" />
                            <field name="amount" />
                        </group>
                    </group>
                    <field name="notes" nolabel="1" placeholder="Ajouter un motif..." />
                    <footer>
                        <button type="object" string="Générer" name="generate" class="oe_highlight" confirm="Êtes-vous sur vous voulez continuer ?" />
                        ou
                        <button type="special" special="cancel" string="Annuler" class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_hr_rubrique_run_view">
            <field name="name">Lot des éléments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.rubrique.run</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_hr_rubrique_run" parent="menu_hr_main_kzm_misc" sequence="5" action="act_open_hr_rubrique_run_view" groups="l10n_ma_hr_payroll.group_hr_menu_element" />
    </data>
</openerp>
