<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data noupdate="0">
        <template id="report_paye_journal">
            <t t-call="report.html_container">
                <t t-as="p" t-foreach="docs">
                    <t  t-set="lines" t-value="p.move_id.line_id.sorted(lambda r: r.debit, reverse=True)"/>
                    <t t-call="kzm_base.kzm_page_layout">
                        <div class="page">
                            <h4 style="text-align: center;">Journal des opérations diverses
                                <br/>
                                La période de
                                <span  options="{'format' : '%d/%m/%Y'}" t-field="p.date_from"/>
                                à
                                <span  options="{'format' : '%d/%m/%Y'}" t-field="p.date_to"/>
                            </h4>
                            <table class="table table-condensed payroll-table-bordered table-bordered">
                                <thead>
                                    <tr>
                                        <th style="text-align: center">Nom</th>
                                        <th style="text-align: center">Code</th>
                                        <th style="text-align: center">Débit</th>
                                        <th style="text-align: center">Crédit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-as="line" t-foreach="lines">
                                        <td style="text-align: left">
                                            <span  t-field="line.account_id.name"/>
                                        </td>
                                        <td style="text-align: center">
                                            <span  t-field="line.account_id.code"/>
                                        </td>
                                        <td style="text-align: right">
                                            <t t-if="line.debit > 0">
                                                <span  t-field="line.debit"/>
                                            </t>
                                        </td>
                                        <td style="text-align: right">
                                            <t t-if="line.credit > 0">
                                                <span  t-field="line.credit"/>
                                            </t>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr >
                                        <td colspan="2" style="text-align: left">
                                            Total
                                        </td>
                                        <td style="text-align: right">
                                            <span  t-esc="formatLang(sum([line.debit for line in lines]))"/>
                                        </td>
                                        <td style="text-align: right">
                                            <span  t-esc="formatLang(sum([line.credit for line in lines]))"/>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>
