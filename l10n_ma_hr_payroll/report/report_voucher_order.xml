<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data noupdate="0">

		<template id="report_voucher_order_global">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">

                <t t-as="order" t-foreach="docs.with_context({'lang':'fr_FR'})">
                    <div class="page" style="font-size: 150%;">
                        <div class="row">
                            <div class="col-xs-6 pull-right">
                                <strong>
                                    <div  t-esc="order.bank_id.bank_name"/>
                                </strong>
                            </div>
                        </div>
                        <h4>Objet : Ordre de virement salaires
                        </h4>
                        <br/>
                        <p>
                            Monsieur,
                        </p>
                        <br/>
                        <p style="text-indent: 25px;">Par le débit de notre compte chez vous N°
                            <strong>
                                <t  t-esc="order.bank_id.acc_number"/>
                            </strong>, nous vous prions de bien vouloir créditer les comptes suivants d'un Montant de
                            <strong>
                                <span  t-esc="order.total_amount"/>
                            </strong>
                        </p>
                        En Chiffres :
                        <strong>
                        <span t-esc="order.amount_to_text"/>
                        </strong>
                        <br/>

                        <br/>
                        <div class="row">
                            <div class="col-xs-6 pull-right" style="text-align: center">Cachet et signature</div>
                        </div>
                    </div>
                </t>
                </t>
            </t>
        </template>



        <template id="report_voucher_order">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                <t t-as="order" t-foreach="docs.with_context({'lang':'fr_FR'})">
                    <div class="page">
                        <div class="row">
                            <div class="col-xs-6 pull-right">
                                <strong>
                                    <div  t-esc="order.bank_id.bank_name"/>
                                </strong>
                            </div>
                        </div>
                        <h4>Objet : Ordre de virement salaires
                        </h4>
                        <p>
                            Monsieur,
                        </p>
                        <p style="text-indent: 25px;">Par le débit de notre compte chez vous N°
                            <strong>
                                <t  t-esc="order.bank_id.acc_number"/>
                            </strong>, nous vous prions de bien vouloir créditer les comptes suivants d'un Montant de
                            <strong>
                                <span  t-esc="order.total_amount"/>
                            </strong>
                        </p>
                        En Chiffres :
                        <strong>
                        <span t-esc="order.amount_to_text"/>
                        </strong>
                        <br/>
                        <br/>
                   <table class="table table-condensed payroll-table-bordered table-bordered">
                            <thead>
                                <tr>
                                    <th>Matricule</th>
                                    <th>Nom et prénom</th>
                                    <th style="text-align: center">Banque</th>
                                    <th style="text-align: center">RIB</th>
                                    <th style="text-align: center">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-as="line" t-foreach="order.vir_line_ids">
                                    <td>
                                        <span  t-field="line.employee_id.otherid"/>
                                    </td>
                                    <td>
                                        <span  t-field="line.employee_id.name"/>
                                    </td>
                                    <td style="text-align: center">
                                        <span  t-field="line.bank_id.bank_name"/>
                                    </td>
                                    <td style="text-align: center">
                                        <span  t-field="line.bank_id.acc_number"/>
                                    </td>
                                    <td style="text-align: right">
                                        <span  t-field="line.amount"/>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4">
                                        Total
                                    </td>
                                    <td style="text-align: right">
                                        <span  t-esc="order.total_amount"/>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="row">
                            <div class="col-xs-6 pull-right" style="text-align: center">Cachet et signature</div>
                        </div>
                    </div>
                </t>
                </t>
            </t>
        </template>
        <template id="report_voucher_order_bmce">
            <div class="workbook">
                <div class="worksheet" fixpages="1" hpages="0" name="Infos" wpages="1">
                    <table>
                        <thead>
                            <tr>
                                <th
                                    easyfx="font: bold on; align: horiz center; border: bottom medium; border: top medium; border: left medium; border: right medium">DATE d'opération</th>
                                <th
                                    easyfx="font: bold on; align: horiz center; border: bottom medium; border: top medium; border: left medium; border: right medium">Nom Ste</th>
                                <th
                                    easyfx="font: bold on; align: horiz center; border: bottom medium; border: top medium; border: left medium; border: right medium">Nom BENEF</th>
                                <th
                                    easyfx="font: bold on; align: horiz center; border: bottom medium; border: top medium; border: left medium; border: right medium">RIB Ste</th>
                                <th
                                    easyfx="font: bold on; align: horiz center; border: bottom medium; border: top medium; border: left medium; border: right medium">RIB BENEF</th>
                                <th
                                    easyfx="font: bold on; align: horiz center; border: bottom medium; border: top medium; border: left medium; border: right medium">MT</th>
                                <th
                                    easyfx="font: bold on; align: horiz center; border: bottom medium; border: top medium; border: left medium; border: right medium">Détail SIMT</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-as="o" t-foreach="docs">
                                <tr t-as="line" t-foreach="o.vir_line_ids">
                                    <td num_format_str="YYYYMMDD">
                                        <span  t-esc="o.voucher_date"/>
                                    </td>
                                    <td>
                                        <span  t-esc="o.company_ids[0].main_company_id.name"/>
                                    </td>
                                    <td>
                                        <span  t-field="line.employee_id.name"/>
                                    </td>
                                    <td>
                                        <span  t-field="o.bank_id.acc_number"/>
                                    </td>
                                    <td>
                                        <span  t-field="line.bank_id.acc_number"/>
                                    </td>
                                    <td>
                                        <span  t-esc="int(line.amount*100)"/>
                                    </td>
                                    <td formula="1">CONCATENATE("3002000000000000000000000000000000000000000MAD2";REPT(0;16-LEN(F__ROW_INDEX__));F__ROW_INDEX__;A__ROW_INDEX__;A__ROW_INDEX__;REPT("
                                        ";21);"0001";REPT(" ";32);"1";B__ROW_INDEX__;REPT(" ";35-LEN(B__ROW_INDEX__));C__ROW_INDEX__;REPT("
                                        ";35-LEN(C__ROW_INDEX__));D__ROW_INDEX__;E__ROW_INDEX__;A__ROW_INDEX__)</td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>
