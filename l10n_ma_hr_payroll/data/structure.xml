<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data noupdate="1">
        <!-- les structures salariales -->
        <record id="hr_payroll.structure_base" model="hr.payroll.structure">
            <field name="name">Structure de base</field>
            <field name="code">BASE</field>
            <field eval="[(6, 0, [ref('rule_salary')])]" name="rule_ids"/>
            <field name="advantages">C'est la structure de base le salaire net sera le salaire brut plus les primes et les avantages moins les retenus des avances attribués à ce salarié </field>
        </record>
        <record id="structure_affiliation" model="hr.payroll.structure">
            <field name="name">Affiliation</field>
            <field name="code">AFFILIATION</field>
            <field name="parent_id" ref="hr_payroll.structure_base"/>
            <field name="rule_ids"
                search="[('parent_rule_id','=',False),('code','in',['IR','PENSION_PARENT','PRESTATION_FAMILIALE_PARENT','INDEMNITE_PERTE_EMPLOI_PARENT','FP','TAX_FORMATION_PROFESSIONELLE_PARENT','AMO_BASE_PARENT','AMO_OBLIGATOIRE_SOLIDARITE_PARENT','PRIME_ANCIENNETE','CONTRIBUTION_SOLIDARITE','MALADIE_MATERNITE_PARENT',''])]"
                model="hr.salary.rule"/>
            <field name="advantages">Le salarié est considéré comme affilié, par conséquent il bénéficiera de tous les éléments qui entrent dans la structure de base (Indemnités, Prime et avantages) plus la CNSS, Prime d'ancienneté et de la Contribution de solidarité</field>
            <field name="cnss_ok" eval="True"/>
        </record>
        <record id="structure_cimr" model="hr.payroll.structure">
            <field name="name">CIMR</field>
            <field name="code">CIMR</field>
            <field name="parent_id" ref="structure_affiliation"/>
            <field name="rule_ids" search="[('code','like','CIMR'),('parent_rule_id','=',False)]" model="hr.salary.rule"/>
            <field name="advantages">Le salarié est considéré comme affilié, de plus il sera bénéficier de la CIMR.</field>
            <field name="cnss_ok" eval="True"/>
            <field name="cimr_ok" eval="True"/>
        </record>
        <record id="structure_assurance_retraite" model="hr.payroll.structure">
            <field name="name">Assurance retraite</field>
            <field name="code">ASSURANCE_RETRAITE</field>
            <field name="parent_id" ref="structure_affiliation"/>
            <field name="rule_ids" search="[('code','like','ASSURANCE_RETRAITE'),('parent_rule_id','=',False)]" model="hr.salary.rule"/>
            <field name="advantages">Le salarié est considéré comme affilié, de plus il sera bénéficier de l'assurance retraite.</field>
            <field name="cnss_ok" eval="True"/>
            <field name="cimr_ok" eval="False"/>
            <field name="assurance_ok" eval="True"/>
        </record>
        <record id="structure_cimr_assurance_retraite" model="hr.payroll.structure">
            <field name="name">Assurance retraite et CIMR</field>
            <field name="code">ASSURANCE_RETRAITE_CIMR</field>
            <field name="parent_id" ref="structure_affiliation"/>
            <field name="rule_ids" search="[('parent_rule_id','=',False),'|',('code','like','ASSURANCE_RETRAITE'),('code','like','CIMR')]" model="hr.salary.rule"/>
            <field name="advantages">Le salarié est considéré comme affilié, de plus il sera bénéficier de l'assurance retraite et de la CIMR.</field>
            <field name="cnss_ok" eval="True"/>
            <field name="cimr_ok" eval="True"/>
            <field name="assurance_ok" eval="True"/>
        </record>
    </data>
</openerp>
