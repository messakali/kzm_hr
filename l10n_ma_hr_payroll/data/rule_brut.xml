<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data noupdate="1">
        <!-- Salaire brut -->
        <record id="hr_payroll.hr_rule_taxable" model="hr.salary.rule">
            <field name="name">Salaire Brut imposable</field>
            <field name="code">BRUT_IMPOSABLE</field>
            <field name="show_on_payslip">never</field>
            <field name="sequence">800</field>
            <field name="parent_rule_id" ref="rule_salary" />
            <field name="amount_select">code</field>
            <field name="category_id" ref="category_brut_imposable" />
            <field name="amount_python_compute">result = (categories.GAIN + categories.AUTRE_GAIN - categories.PERTE + categories.AVANTAGE + categories.TAXABLE)</field>
        </record>
        <record id="hr_rule_brut" model="hr.salary.rule">
            <field name="name">Salaire Brut</field>
            <field name="code">BRUT</field>
            <field name="show_on_payslip">never</field>
            <field name="sequence">900</field>
            <field name="parent_rule_id" ref="rule_salary" />
            <field name="amount_select">code</field>
            <field name="category_id" ref="hr_payroll.GROSS" />
            <field name="amount_python_compute">result = (categories.BRUT_IMPOSABLE + categories.EXONORE)</field>
            <field model="account.account" name="account_debit"
                search="[('code','like','61711')]"/>
        </record>
    </data>
</openerp>
