<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data noupdate="1">
        <!-- Contract -->
        <record forcecreate="True" id="ir_cron_update_contract_cron" model="ir.cron">
            <field name="name">Mettre à jour l'état des contrats</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">4</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall"/>
            <field eval="'hr.contract'" name="model"/>
            <field eval="'update_contract_state'" name="function"/>
            <field eval="time.strftime('%Y-%m-%d')+' 00:00:00'" name="nextcall"/>
            <field name="args">([], False, True, )</field>
        </record>
        <!-- Attendance -->
        <record forcecreate="True" id="ir_cron_attendance_signoutall" model="ir.cron">
            <field name="name">Pointer sortie pour tous les employés</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall"/>
            <field eval="'hr.employee'" name="model"/>
            <field eval="'attendance_action_signoutall'" name="function"/>
            <field eval="time.strftime('%Y-%m-%d')+' 23:00:00'" name="nextcall"/>
            <field name="args">()</field>
        </record>
        <!-- Holiday Allocation -->
        <record forcecreate="True" id="ir_cron_holiday_allocation" model="ir.cron">
            <field name="name">Attribution de nombre de jours pour les congés légaux</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">4</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field eval="'hr.employee'" name="model"/>
            <field eval="'update_holiday_allocation'" name="function"/>
            <field eval="time.strftime('%Y-%m-%d')+' 00:00:00'" name="nextcall"/>
            <field name="args">()</field>
        </record>
    </data>
</openerp>
