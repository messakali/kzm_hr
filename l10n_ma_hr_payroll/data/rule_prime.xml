        <!-- Ancienneté -->
        <record id="hr_rule_prime_anciennete" model="hr.salary.rule">
            <field name="name">Prime d'ancienneté</field>
            <field name="code">PRIME_ANCIENNETE</field>
            <field name="sequence">99</field>
            <field name="category_id" ref="category_prime_anncienete"/>
            <field eval="False" name="parent_rule_id"/>
            <field name="show_on_payslip">ifnotnull</field>
            <field name="condition_select">none</field>
            <field name="amount_select">flexible_percentage</field>
            <field name="base_val">categories.GAIN + categories.AUTRE_GAIN - categories.PERTE</field>
            <field name="quantity">1</field>
            <field name="rate_val">inputs.ANCIENNETE_TAUX.amount</field>
        </record>
        <!-- Licenciement -->
        <record id="hr_rule_prime_licenciement" model="hr.salary.rule">
            <field name="name">Prime de licenciement</field>
            <field name="code">PRIME_LICENCIEMENT</field>
            <field name="sequence">500</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field eval="rule_salary" name="parent_rule_id"/>
            <field name="show_on_payslip">ifnotnull</field>
            <field name="condition_select">none</field>
            <field name="amount_select">flexible_percentage</field>
            <field name="base_val">inputs.PRIME_LICENCIEMENT.amount</field>
            <field name="quantity">1</field>
            <field name="rate_val">100</field>
        </record>
        <!-- Préavis -->
        <record id="hr_rule_prime_preavis" model="hr.salary.rule">
            <field name="name">Prime de préavis</field>
            <field name="code">PRIME_PREAVIS</field>
            <field name="sequence">500</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field eval="rule_salary" name="parent_rule_id"/>
            <field name="show_on_payslip">ifnotnull</field>
            <field name="condition_select">none</field>
            <field name="amount_select">flexible_percentage</field>
            <field name="base_val">inputs.PRIME_PREAVIS.amount</field>
            <field name="quantity">1</field>
            <field name="rate_val">100</field>
        </record>
