        <!-- Base salariale -->
        <record id="hr_rule_base_salariale" model="hr.salary.rule">
            <field name="name">Base salariale</field>
            <field name="code">BASE_SALARIALE</field>
            <field name="sequence">100</field>
            <field name="category_id" ref="category_base_salariale"/>
            <field eval="rule_salary" name="parent_rule_id"/>
            <field name="show_on_payslip">never</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (categories.GAIN + categories.AUTRE_GAIN - categories.PERTE - categories.PRIME_ANCIENNETE - categories.HS)</field>
        </record>
