<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data noupdate="1">
        <record id="avantage_logement" model="hr.avantage">
            <field name="name">Logement</field>
            <field name="code">LOGEMENT</field>
            <field  eval="True" name="can_reset"/>
            <field  eval="False" name="can_request"/>
            <field name="type">argent</field>
            <field  eval="True" name="active"/>
            <field  eval="True" name="export_ok"/>
        </record>
        <record id="avantage_nouriture" model="hr.avantage">
            <field name="name">Frais de nouriture</field>
            <field name="code">FRAIS_NOURITURE</field>
            <field  eval="True" name="can_reset"/>
            <field  eval="False" name="can_request"/>
            <field name="type">argent</field>
            <field  eval="True" name="active"/>
            <field  eval="True" name="export_ok"/>
        </record>
        <record id="avantage_cadeau" model="hr.avantage">
            <field name="name">Cadeau</field>
            <field name="code">CADEAU</field>
            <field  eval="True" name="can_reset"/>
            <field  eval="False" name="can_request"/>
            <field name="type">argent</field>
            <field  eval="True" name="active"/>
            <field  eval="True" name="export_ok"/>
        </record>
<!-- Mail subtypes -->
        <record id="mt_avantage_line_confirmed" model="mail.message.subtype">
            <field name="name">À valider</field>
            <field name="res_model">hr.avantage.line</field>
            <field name="description">Demande confirmée et en attente de validation</field>
        </record>
        <record id="mt_holidays_validated" model="mail.message.subtype">
            <field name="name">Validée</field>
            <field name="res_model">hr.avantage.line</field>
            <field name="description">Demande validée et en attente d'approbation</field>
        </record>
        <record id="mt_avantage_line_done" model="mail.message.subtype">
            <field name="name">Validée et approuvée</field>
            <field name="res_model">hr.avantage.line</field>
            <field name="description">Demande validée et approuvée</field>
        </record>
        <record id="mt_holidays_refused" model="mail.message.subtype">
            <field name="name">Refusée</field>
            <field name="res_model">hr.avantage.line</field>
            <field name="description">Demande refusée</field>
        </record>
    </data>
</openerp>
