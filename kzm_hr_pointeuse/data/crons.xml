<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- cron job pour nombre de jours avant le conge -->
        <record id="ir_cron_syncroniser_pointeuses" model="ir.cron"
                forcecreate="True" >
            <field name="name">Syncroniser les pointeuses des ouvriers</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="sequence">1</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field name="model_id" ref="model_kzm_hr_pointeuse"/>
            <field name="state">code</field>
            <field name="code">model.cron_syncroniser_pointeuses()</field>
        </record>

        <!-- cron job for timeclock -->
        <record id="ir_cron_pointeuse_sync" model="ir.cron" forcecreate="True" >
            <field name="name">Int√©gration des pointeuses</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field name="model_id" ref="model_kzm_hr_pointeuse_load_attendance"/>
            <field name="state">code</field>
            <field name="code">model.check_pointeuse_periodic()</field>
        </record>

    </data>
</odoo>